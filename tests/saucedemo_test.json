{
  "document_title": "SauceDemo E-Commerce Test (No Anti-Bot)",
  "summary": "User story: As a shopper, I want to login, browse products, add to cart, and checkout.",
  "user_stories": [
    {
      "id": "US-SAUCE-001",
      "as_a": "Online shopper testing the demo store",
      "i_want": "to complete a full purchase flow",
      "so_that": "I can verify the e-commerce functionality works",
      "acceptance_criteria": [
        "Login with valid credentials",
        "Browse and select products",
        "Add items to cart",
        "Complete checkout process"
      ]
    }
  ],
  "test_cases": [
    {
      "id": "TC-SAUCE-001",
      "feature": "Authentication",
      "title": "Login with standard user",
      "user_story_id": "US-SAUCE-001",
      "steps": [
        "Enter username in the username field",
        "Enter password in the password field",
        "Click the Login button"
      ],
      "expected_result": "User is logged in and sees product inventory",
      "priority": "P1",
      "type": "Functional",
      "tags": [
        "login",
        "auth"
      ],
      "test_data": {
        "username": "standard_user",
        "password": "secret_sauce",
        "expected_url": "/inventory"
      }
    },
    {
      "id": "TC-SAUCE-002",
      "feature": "Product Selection",
      "title": "Add backpack to cart",
      "user_story_id": "US-SAUCE-001",
      "steps": [
        "Find the Sauce Labs Backpack product",
        "Click Add to Cart button for the backpack",
        "Verify cart badge shows 1 item"
      ],
      "expected_result": "Backpack is added to cart",
      "priority": "P1",
      "type": "Functional",
      "tags": [
        "product",
        "cart"
      ],
      "test_data": {
        "expected_text": "Remove"
      }
    },
    {
      "id": "TC-SAUCE-003",
      "feature": "Shopping Cart",
      "title": "View cart contents",
      "user_story_id": "US-SAUCE-001",
      "steps": [
        "Click on the shopping cart icon",
        "Verify cart page shows the added item",
        "Confirm item name and price are visible"
      ],
      "expected_result": "Cart displays backpack with correct details",
      "priority": "P1",
      "type": "Functional",
      "tags": [
        "cart",
        "review"
      ],
      "test_data": {
        "expected_url": "/cart",
        "expected_text": "Sauce Labs Backpack"
      }
    },
    {
      "id": "TC-SAUCE-004",
      "feature": "Checkout",
      "title": "Enter shipping information",
      "user_story_id": "US-SAUCE-001",
      "steps": [
        "Click Checkout button",
        "Fill in First Name field",
        "Fill in Last Name field",
        "Fill in Postal Code field",
        "Click Continue button",
        "Stop at the Checkout: Overview page"
      ],
      "expected_result": "Checkout proceeds to order overview",
      "priority": "P1",
      "type": "Functional",
      "tags": [
        "checkout",
        "form"
      ],
      "test_data": {
        "first_name": "John",
        "last_name": "Doe",
        "postal_code": "12345",
        "expected_url": "/checkout-step-two"
      }
    },
    {
      "id": "TC-SAUCE-005",
      "feature": "Order Completion",
      "title": "Finish the order",
      "user_story_id": "US-SAUCE-001",
      "steps": [
        "Review the order summary",
        "Click Finish button to complete order",
        "Verify order confirmation message"
      ],
      "expected_result": "Order is complete with thank you message",
      "priority": "P1",
      "type": "Functional",
      "tags": [
        "checkout",
        "complete"
      ],
      "test_data": {
        "expected_text": "Thank you for your order"
      }
    }
  ]
}